{
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "target": "es5", 
        "module": "commonjs", 
        "outDir": "./dist", 
        "rootDir": "./src", 
        "composite": true, 
        "strict": true, 
        "esModuleInterop": true, 
        "skipLibCheck": true, 
        "forceConsistentCasingInFileNames": true 
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ],
    "references": [
        { "path": "../nsfwspy-core" },
        { "path": "../nsfwspy-node" }
    ]
}